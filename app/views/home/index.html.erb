<div class="popular-news-area section-padding-80-50">
  <div class="container">
    <div class="row">
      <div class="col-12 col-lg-8">
        <div class="section-heading">
          <h6><%= t "new_News"%></h6>
        </div>
        <div class="row">
          <% @newspaper_hots.each do |newspaper_hot| %>
            <div class="col-12 col-md-6">
              <div class="single-blog-post style-3">
                <div class="post-thumb">
                  <%= link_to newspaper_path(newspaper_hot) do %>
                     <%= image_tag "#{newspaper_hot.image}" , alt: "avatar" %>
                  <% end %>  
                </div>
                <div class="post-data">
                  <%= link_to newspaper_path(newspaper_hot) do %>
                     <h6><%= newspaper_hot.title %></h6>
                  <% end %>
                  <p><%= raw( newspaper_hot.description.slice(Settings.start_char..Settings.end_char)) %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-12 col-lg-4">
        <div class="section-heading">
          <h6><%= t "related_news"%></h6>
        </div>
        <% @newspaper_normals.each do |newspaper_normal| %>
          <div class="single-blog-post small-featured-post d-flex">
            <div class="post-thumb news_normal">
              <%= link_to newspaper_path(newspaper_normal) do %>
                <%= image_tag "#{newspaper_normal.image}" , alt: "avatar" %>
              <% end %>  
            </div>
            <div class="post-data">
              <%= link_to newspaper_normal.category_name, category_path(newspaper_normal.category_id), class:"post-catagory" %>
              <div class="post-meta">
                <%= link_to newspaper_path(newspaper_normal), class:"post-title newlq" do %>
                  <h6><%= newspaper_normal.title %></h6>
                <% end %>  
                <p class="post-date"><%= newspaper_normal.created_at %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>      
    </div>
  </div>
</div>
